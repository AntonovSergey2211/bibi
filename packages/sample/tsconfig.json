{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"outDir": "./dist",
		"noImplicitAny": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*",
		"node_modules/"
	],
	"exclude": [
		"dist",
		"node_modules",
		"**/*.spec.ts"
	]
}