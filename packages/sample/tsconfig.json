{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"esnext"
		]
	},
	"include": [
		"src/**/*",
		"node_modules/"
	],
	"exclude": [
		"dist",
		"node_modules",
		"**/*.spec.ts"
	]
}